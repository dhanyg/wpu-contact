<section class="px-5">
    <div class="max-w-sm mx-auto mt-10 mb-5 p-8 bg-white rounded-md shadow-md">
        <h2 class="text-center text-xl font-medium text-gray-700 mb-5">Edit Contact</h2>
        <form action="/contact?_method=PUT" method="POST">
            <input type="hidden" name="oldName" value="<%= contact.fullName %>">
            <input type="hidden" name="_id" value="<%= contact._id %>">
            <div class="mt-5">
                <label class="block text-gray-500 text-sm mb-2" for="fullName">Full Name</label>
                <input
                    class="block w-full rounded ring-2 ring-gray-200 px-2 py-1.5 text-sm text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-400"
                    type="text" name="fullName" id="fullName" required value="<%= old?.fullName || contact.fullName %>">
                <% if (typeof errors !=='undefined' ) { %>
                    <div class="text-red-400 mt-1">
                        <small>
                            <%= errors.fullName?.msg %>
                        </small>
                    </div>
                    <% } %>
            </div>
            <div class="mt-5">
                <label class="block text-gray-500 text-sm mb-2" for="phone">Phone Number</label>
                <input
                    class="block w-full rounded ring-2 ring-gray-200 px-2 py-1.5 text-sm text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-400"
                    type="text" name="phone" id="phone" value="<%= old?.phone || contact.phone %>">
                <% if (typeof errors !=='undefined' ) { %>
                    <div class="text-red-400 mt-1">
                        <small>
                            <%= errors.phone?.msg %>
                        </small>
                    </div>
                    <% } %>
            </div>
            <div class="mt-5">
                <label class="block text-gray-500 text-sm mb-2" for="email">Email</label>
                <input
                    class="block w-full rounded ring-2 ring-gray-200 px-2 py-1.5 text-sm text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-400"
                    type="email" name="email" id="email" value="<%= old?.email || contact.email %>">
                <% if (typeof errors !=='undefined' ) { %>
                    <div class="text-red-400 mt-1">
                        <small>
                            <%= errors.email?.msg %>
                        </small>
                    </div>
                    <% } %>
            </div>
            <div class="mt-5">
                <label class="block text-gray-500 text-sm mb-2" for="contactType">Type</label>
                <div class="relative">
                    <select
                        class="relative bg-transparent z-10 block w-full rounded ring-2 ring-gray-200 px-2 py-1.5 text-sm text-gray-500 appearance-none focus:outline-none focus:ring-2 focus:ring-indigo-400"
                        name="contactType" id="contactType">
                        <option value="College" <%=old?.contactType=="College" ? 'selected' :
                            contact.contactType=="College" && 'selected' %>>College</option>
                        <option value="Family" <%=old?.contactType=="Family" ? 'selected' :
                            contact.contactType=="Family" && 'selected' %>>Family</option>
                        <option value="Hangout" <%=old?.contactType=="Hangout" ? 'selected' :
                            contact.contactType=="Hangout" && 'selected' %>>Hangout</option>
                        <option value="Work" <%=old?.contactType=="Work" ? 'selected' : contact.contactType=="Work"
                            && 'selected' %>>Work</option>
                        <option value="Others" <%=old?.contactType=="Others" ? 'selected' :
                            contact.contactType=="Others" && 'selected' %>>Others</option>
                    </select>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 absolute z-0 right-1 top-1.5 text-gray-300"
                        viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M10 3a1 1 0 01.707.293l3 3a1 1 0 01-1.414 1.414L10 5.414 7.707 7.707a1 1 0 01-1.414-1.414l3-3A1 1 0 0110 3zm-3.707 9.293a1 1 0 011.414 0L10 14.586l2.293-2.293a1 1 0 011.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z"
                            clip-rule="evenodd" />
                    </svg>
                </div>
                <% if (typeof errors !=='undefined' ) { %>
                    <div class="text-red-400 mt-1">
                        <small>
                            <%= errors.contactType?.msg %>
                        </small>
                    </div>
                    <% } %>
            </div>
            <div class="mt-5">
                <button type="submit"
                    class="w-full px-3 py-2 rounded bg-indigo-500 text-center text-indigo-100 font-medium focus:outline-none focus:ring-1 focus:ring-indigo-600 focus:bg-indigo-400 hover:bg-indigo-600">Update</button>
            </div>
        </form>
    </div>
    <a href="/" class="flex justify-center items-center space-x-2 text-indigo-300 hover:text-indigo-400">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18" />
        </svg>
        <span class="text-sm">Back to home</span>
    </a>
</section>